{
  "name": "outtime-backend",
  "version": "1.0.0",
  "description": "Backend for Out Time - employee time tracking system",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "cross-env NODE_ENV=development nodemon server.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop outtime-backend",
    "pm2:restart": "pm2 restart outtime-backend",
    "pm2:logs": "pm2 logs outtime-backend",
    "migrate": "node migrations/migrate.js",
    "migrate:seed": "node migrations/migrate.js --seed",
    "migrate:partitioning": "node scripts/run-partitioning-migration.js",
    "db:reset": "psql $DATABASE_URL -c \"DROP SCHEMA public CASCADE; CREATE SCHEMA public;\"",
    "db:setup": "npm run migrate:seed",
    "test": "cross-env NODE_ENV=test DATABASE_URL=postgresql://postgres:postgres@localhost:5432/outtime_test JWT_ACCESS_SECRET=test_access_secret_key_very_long_and_secure_123 JWT_REFRESH_SECRET=test_refresh_secret_key_very_long_and_secure_456 JWT_ACCESS_EXPIRATION=15m JWT_REFRESH_EXPIRATION=7d BCRYPT_SALT_ROUNDS=4 LOG_LEVEL=error TIMEZONE=UTC NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "logs": "tail -f logs/combined.log",
    "test:supabase": "node test_supabase.js"
  },
  "keywords": [
    "time-tracking",
    "telegram-bot",
    "employee-management"
  ],
  "author": "Outcasts",
  "license": "ISC",
  "packageManager": "pnpm@10.12.1",
  "dependencies": {
    "@supabase/supabase-js": "^2.50.2",
    "bcrypt": "6.0.0",
    "cors": "2.8.5",
    "date-fns": "4.1.0",
    "date-fns-tz": "^3.2.0",
    "exceljs": "4.4.0",
    "express": "5.1.0",
    "express-rate-limit": "^7.5.1",
    "express-validator": "7.2.1",
    "helmet": "8.1.0",
    "jsonwebtoken": "9.0.2",
    "node-cron": "4.1.1",
    "node-fetch": "^3.3.2",
    "pg": "8.16.2",
    "pg-hstore": "^2.3.4",
    "pm2": "^6.0.8",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "telegraf": "4.16.3",
    "uuid": "11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "24.0.3",
    "cross-env": "^7.0.3",
    "dotenv": "16.5.0",
    "jest": "^30.0.2",
    "nodemon": "3.1.10",
    "supertest": "^7.1.1"
  }
}
