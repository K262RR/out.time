# Настройки базы данных
DATABASE_URL=postgresql://username:password@localhost:5432/outtime_db

# JWT секрет для авторизации
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random

# Telegram Bot токен
BOT_TOKEN=your_telegram_bot_token_here

# Настройки сервера
NODE_ENV=production
PORT=3000

# URL фронтенда (для CORS)
FRONTEND_URL=https://your-domain.com

# Настройки безопасности
SESSION_SECRET=your_session_secret_here

# Настройки логирования
LOG_LEVEL=info

# Настройки уведомлений (время в формате HH:MM)
MORNING_NOTIFICATION_TIME=09:00
EVENING_NOTIFICATION_TIME=18:00

# Часовой пояс
TIMEZONE=Europe/Moscow 