# Настройки базы данных
DATABASE_URL=postgresql://username:password@localhost:5432/outtime_db

# JWT секрет для авторизации
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random

# Telegram Bot токен
BOT_TOKEN=your_telegram_bot_token_here

# Настройки сервера
NODE_ENV=production
PORT=3000

# Домен приложения
DOMAIN=https://your-domain.com

# URL фронтенда (для CORS)
FRONTEND_URL=https://your-domain.com

# Настройки безопасности
SESSION_SECRET=your_session_secret_here
WEBHOOK_SECRET=your_webhook_secret_here_make_it_random

# SSL настройки
SSL_CERT_PATH=/etc/letsencrypt/live/your-domain.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/your-domain.com/privkey.pem
SSL_CHAIN_PATH=/etc/letsencrypt/live/your-domain.com/chain.pem

# Настройки логирования
LOG_LEVEL=info

# Настройки уведомлений (время в формате HH:MM)
MORNING_NOTIFICATION_TIME=09:00
EVENING_NOTIFICATION_TIME=18:00

# Часовой пояс
TIMEZONE=Europe/Moscow

# Дополнительные настройки безопасности
RATE_LIMIT_WINDOW_MS=900000  # 15 минут
RATE_LIMIT_MAX_REQUESTS=100  # Максимум запросов в окно
ENABLE_HSTS=true            # Включить HSTS
HSTS_MAX_AGE=31536000      # 1 год в секундах 